<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ index.php?route=$1 [L,QSA]
</IfModule>

# Переконаємося, що Header використовується тільки якщо доступний mod_headers
<IfModule mod_headers.c>
  <FilesMatch "\.(css|js|png|jpg|gif|ico|woff|woff2|ttf|svg|eot)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
</IfModule>

# Захист конфіденційних файлів
<FilesMatch "(^\.htaccess|\.env|\.htpasswd|config\.php)">
  Order Allow,Deny
  Deny from all
</FilesMatch>
